<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- Thanh top -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="58dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            app:tint="#FF6D00" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ảnh sản phẩm"
            android:textSize="18sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btn_add_image"
            android:layout_width="58dp"
            android:layout_height="45dp"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_addimage"
            app:tint="#FF6D00" />
    </LinearLayout>

    <!-- Grid ảnh -->
    <GridView
        android:id="@+id/grid_images"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:numColumns="3"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_action_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#FFFFFF" />

    <!-- Thanh thao tác dưới -->
    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone"
        android:background="#FFF3E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_delete_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa ảnh"
            android:textColor="#FFF"
            android:backgroundTint="#E53935" />

        <Button
            android:id="@+id/btn_edit_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sửa ảnh"
            android:textColor="#FFF"
            android:layout_marginStart="16dp"
            android:backgroundTint="#FF6D00" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
