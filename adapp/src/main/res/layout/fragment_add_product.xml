<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Back button -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại"
            android:layout_marginBottom="16dp"
            app:tint="#FF6D00" />

        <!-- Product Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#FF6D00"
            app:startIconDrawable="@drawable/ic_product"
            app:startIconTint="@color/orange_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên sản phẩm"
                android:inputType="text"
                android:paddingStart="45dp"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Slug -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#FF6D00"
            app:startIconDrawable="@drawable/ic_slug"
            app:startIconTint="@color/orange_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_product_slug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Slug"
                android:inputType="text"
                android:paddingStart="45dp"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#FF6D00"
            app:startIconDrawable="@drawable/ic_price"
            app:startIconTint="@color/orange_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá gốc"
                android:inputType="numberDecimal"
                android:paddingStart="45dp"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Discount Price -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#FF6D00"
            app:startIconDrawable="@drawable/ic_discount"
            app:startIconTint="@color/orange_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_product_discount_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá giảm"
                android:inputType="numberDecimal"
                android:paddingStart="45dp"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Brand -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#FF6D00"
            app:startIconDrawable="@drawable/ic_brand"
            app:startIconTint="@color/orange_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_product_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Thương hiệu"
                android:inputType="text"
                android:paddingStart="45dp"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Stock -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#FF6D00"
            app:startIconDrawable="@drawable/ic_stock"
            app:startIconTint="@color/orange_500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_product_stock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Số lượng tồn"
                android:inputType="number"
                android:paddingStart="45dp"
                android:padding="15dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Description -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxBackgroundMode="outline"
            app:boxStrokeWidth="1.5dp"
            app:boxBackgroundColor="@color/white"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeColor="#FF6D00">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_product_description"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="Mô tả sản phẩm"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:padding="12dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Checkboxes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <CheckBox
                android:id="@+id/cb_is_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm mới"
                android:buttonTint="@color/orange_500"
                android:layout_marginEnd="70dp"/>

            <CheckBox
                android:id="@+id/cb_is_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/orange_500"
                android:text="Sản phẩm hot"/>
        </LinearLayout>

        <!-- Category spinner -->
        <Spinner
            android:id="@+id/spinner_category"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/spinner_background" />

        <!-- Image preview -->
        <ImageView
            android:id="@+id/iv_selected_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            android:background="@drawable/image_placeholder"/>

        <!-- Select Image button -->
        <Button
            android:id="@+id/btn_select_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn ảnh sản phẩm"
            android:backgroundTint="#FF6D00"
            android:textColor="@android:color/white"
            android:layout_marginBottom="12dp"/>

        <!-- Save button -->
        <Button
            android:id="@+id/btn_save_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu sản phẩm"
            android:backgroundTint="#FF6D00"
            android:textColor="@android:color/white"/>
    </LinearLayout>
</ScrollView>
